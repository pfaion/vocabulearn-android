<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkColor"
    tools:context="pfaion.vocabulearn.CardViewActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="56dp"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:background="@color/primaryColor"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="Adjectives 25/100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:progress="25"
        android:progressTint="@color/primaryLightColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/card_with_corners"
        android:gravity="center"
        android:padding="15dp"
        android:text="Some text here"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@color/primaryColor"
            android:tint="@android:color/white"
            android:layout_weight="1"
            app:srcCompat="@drawable/arrow_back" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@color/primaryColor"
            android:tint="@android:color/white"
            android:layout_weight="1"
            app:srcCompat="@drawable/thumb_down" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@color/primaryColor"
            android:tint="@android:color/white"
            android:layout_weight="1"
            app:srcCompat="@drawable/sync" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@color/primaryColor"
            android:tint="@android:color/white"
            android:layout_weight="1"
            app:srcCompat="@drawable/thumb_up" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@color/primaryColor"
            android:tint="@android:color/white"
            android:layout_weight="1"
            app:srcCompat="@drawable/arrow_forward" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
